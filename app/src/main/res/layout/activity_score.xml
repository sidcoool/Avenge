<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lenovo.avenge.Score"
    android:background="@drawable/space_mars">


    <ImageView
        android:id="@+id/strange"
        android:layout_width="85dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/doctor_score" />

    <ImageView
        android:id="@+id/score_circle"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_below="@+id/strange"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/strange_circle" />

    <TextView
        android:id="@+id/SCORE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/score_circle"
        android:layout_alignLeft="@+id/strange"
        android:layout_alignStart="@+id/strange"
        android:text=""
        android:textColor="#FFDCBF"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/score_circle"
        android:layout_marginLeft="152dp"
        android:text=""
        android:textColor="#C1FE02"
        android:textSize="45sp"
        android:textStyle="bold|italic" />

    <EditText
        android:id="@+id/user_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:cursorVisible="true"
        android:background="#3D3E08"
        android:textColor="#C1FE02"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="64dp"
        android:text="PLEASE ENTER YOUR NAME HERE"
        android:textColor="#FFDCBF"
        android:textSize="22sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="14dp"
        android:layout_marginRight="10dp"
        android:background="#FEEAC1"
        android:fadingEdge="horizontal|vertical"
        android:text="SAVE"
        android:textSize="18sp"
        android:textStyle="bold"
        android:onClick="save"/>
</RelativeLayout>
